#!/bin/sh

set -u

if [ "$(id -u)" -ne 0 ]
then
    echo "$0 must be run with sudo" >&2
    exit 1
fi

confdir="/home/amnesia/.config/tca/"
conffile="$confdir/tca.conf"
mkdir -p "$confdir"
touch "$conffile"
chown -R root:root "$confdir"
         #-c 'UNIX:/run/tor/control' \
exec /usr/local/lib/connect-drop \
         -c "FILE:$conffile:r+" \
         -c "TCP:127.0.0.1:9051" \
         -- /sbin/runuser -u amnesia env DISPLAY="${DISPLAY:-}" /usr/lib/python3/dist-packages/tca/application.py
