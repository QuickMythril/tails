#!/bin/sh

set -eu

SETTINGS_DIR='/live/persistence/TailsData_unlocked/dont-ask-again'
if [ ! -d "${SETTINGS_DIR}" ]; then
    # Feature not available so always ask again
    exit 0
fi

LONGOPTS='dont-ask-again,timeout:'
OPTS="$(getopt -o "" --longoptions ${LONGOPTS} -n "$(basename "${0}")" -- "$@")"
eval set -- "$OPTS"
while [ "${#}" -gt 0 ]; do
    case "${1}" in
        --dont-ask-again)
            DONT_ASK_AGAIN='yes'
            ;;
        --timeout)
            shift
            TIMEOUT="${1}"  # in days
            ;;
        --)
            shift
            break
            ;;
    esac
    shift
done

IDENTIFIER="${@}"
if [ -n "${DONT_ASK_AGAIN:-}" ]; then
    touch "${SETTINGS_DIR}/${IDENTIFIER}"
else
    if [ -n "${TIMEOUT:-}" ]; then
        find "${SETTINGS_DIR}" -name "${IDENTIFIER}" -mtime +"${TIMEOUT}" -delete
    fi
    [ ! -e "${SETTINGS_DIR}/${IDENTIFIER}" ]
fi
